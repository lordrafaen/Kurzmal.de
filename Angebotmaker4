    // --- RENDERING ---
    function renderTable() {
        const tbody = document.getElementById('pos-table');
        const emptyMsg = document.getElementById('empty-msg');
        const riskFactor = parseFloat(document.getElementById('v_risk').value) || 1.0;
        
        tbody.innerHTML = '';
        if (positions.length === 0) {
            emptyMsg.style.display = 'block';
            return;
        }
        emptyMsg.style.display = 'none';

        // 1. Kategorien sammeln (Standards zuerst, dann Custom)
        const standardCats = Object.keys(categories);
        const usedCats = [...new Set(positions.map(p => p.category))];
        
        // Sortieren: Zuerst die, die im Katalog sind (in Katalog-Reihenfolge), dann der Rest alphabetisch
        usedCats.sort((a, b) => {
            const idxA = standardCats.indexOf(a);
            const idxB = standardCats.indexOf(b);
            if(idxA !== -1 && idxB !== -1) return idxA - idxB;
            if(idxA !== -1) return -1;
            if(idxB !== -1) return 1;
            return a.localeCompare(b);
        });

        usedCats.forEach(catName => {
            const catItems = positions.filter(p => p.category === catName);
            
            // Kategorie Header
            const headerRow = tbody.insertRow();
            headerRow.className = "cat-header";
            headerRow.innerHTML = `<td colspan="6">${catName}</td>`;

            catItems.forEach(pos => {
                const originalIndex = positions.indexOf(pos);
                const sum = (pos.qty * pos.std * pos.rate * riskFactor).toFixed(2);
                const row = tbody.insertRow();
                row.innerHTML = `
                    <td>${pos.name}</td>
                    <td><input type="number" min="0.1" step="0.1" value="${pos.qty}" oninput="updatePos(${originalIndex}, 'qty', this.value)"></td>
                    <td><input type="number" min="0.1" step="0.1" value="${pos.std}" oninput="updatePos(${originalIndex}, 'std', this.value)"></td>
                    <td><input type="number" min="0" step="1" value="${pos.rate}" oninput="updatePos(${originalIndex}, 'rate', this.value)"></td>
                    <td style="font-weight:bold">${sum} €</td>
                    <td><button class="btn-remove" onclick="removePos(${originalIndex})">✕</button></td>
                `;
            });
        });

        updateCatalogButtons();
    }

    function updateCatalogButtons() {
        document.querySelectorAll('.btn-item').forEach(btn => btn.classList.remove('disabled'));
        positions.forEach(p => {
            const btnId = `btn-${p.name.replace(/\W/g, '')}`;
            const btn = document.getElementById(btnId);
            if(btn) btn.classList.add('disabled');
        });
    }

    function updatePos(index, field, value) {
        positions[index][field] = parseFloat(value) || 0;
        renderTable(); 
        calc();
    }

    function removePos(index) {
        positions.splice(index, 1);
        renderTable();
        calc();
    }

    // --- BERECHNUNG ---
    function calc() {
        const riskFactor = parseFloat(document.getElementById('v_risk').value) || 1.0;
        let subtotal = 0;
        positions.forEach(pos => {
            subtotal += (pos.qty * pos.std * pos.rate * riskFactor);
        });

        const travel = parseFloat(document.getElementById('v_travel').value) || 0;
        const vatRate = parseFloat(document.getElementById('v_vat').value) || 0;
        
        const net = subtotal + travel;
        const tax = net * vatRate;
        const gross = net + tax;

        document.getElementById('res-net').textContent = `Netto: ${net.toFixed(2)} €`;
        document.getElementById('res-vat').textContent = `MwSt (${(vatRate*100).toFixed(0)}%): ${tax.toFixed(2)} €`;
        
        const isMonthly = document.getElementById('b_type').value === 'monatlich';
        document.getElementById('res-total').textContent = `Gesamt: ${gross.toFixed(2)} € ${isMonthly?'/ Monat':''}`;
    }

    // --- STORAGE & LOGO ---
    document.getElementById('logo_input').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (!file) return;
        const reader = new FileReader();
        reader.onload = function(evt) {
            logoData = evt.target.result;
            document.getElementById('logo-preview').src = logoData;
            document.getElementById('logo-preview').style.display = 'block';
            saveData();
        };
        reader.readAsDataURL(file);
    });

    function saveData() {
        const data = {
            name: document.getElementById('s_name').value,
            comp: document.getElementById('s_comp').value,
            addr: document.getElementById('s_addr').value,
            logo: logoData
        };
        localStorage.setItem('handwerkerApp_v2.2', JSON.stringify(data));
    }

    function loadSettings() {
        const data = JSON.parse(localStorage.getItem('handwerkerApp_v2.2'));
        if (data) {
            document.getElementById('s_name').value = data.name || '';
            document.getElementById('s_comp').value = data.comp || '';
            document.getElementById('s_addr').value = data.addr || '';
            if (data.logo) {
                logoData = data.logo;
                document.getElementById('logo-preview').src = logoData;
                document.getElementById('logo-preview').style.display = 'block';
            }
        }
    }

    // --- EXPORTS ---
    // Helper to get grouped data
    function getGroupedData() {
        const standardCats = Object.keys(categories);
        const usedCats = [...new Set(positions.map(p => p.category))];
        usedCats.sort((a, b) => {
            const idxA = standardCats.indexOf(a);
            const idxB = standardCats.indexOf(b);
            if(idxA !== -1 && idxB !== -1) return idxA - idxB;
            if(idxA !== -1) return -1;
            if(idxB !== -1) return 1;
            return a.localeCompare(b);
        });
        return usedCats;
    }

    async function exportPDF() {
        const { jsPDF } = window.jspdf;
        const doc = new jsPDF();
        const riskFactor = parseFloat(document.getElementById('v_risk').value) || 1.0;
        let y = 20;

        if (logoData) doc.addImage(logoData, 'JPEG', 150, 15, 40, 20);
        doc.setFontSize(8); doc.setTextColor(100); doc.text("Absender:", 20, y); y += 5;
        doc.setFontSize(10); doc.setTextColor(0);
        doc.text(document.getElementById('s_comp').value, 20, y); y += 5;
        doc.text(document.getElementById('s_name').value, 20, y); y += 5;
        const addrLines = document.getElementById('s_addr').value.split('\n');
        addrLines.forEach(l => { doc.text(l, 20, y); y += 5; });

        y = 65;
        doc.setFont(undefined, 'bold'); doc.text("Empfänger:", 20, y);
        doc.setFont(undefined, 'normal'); y += 7;
        doc.text(document.getElementById('c_name').value, 20, y);
        document.getElementById('c_addr').value.split('\n').forEach(l => { y += 5; doc.text(l, 20, y); });
        
        doc.text(`Datum: ${document.getElementById('c_date').value}`, 140, 72);
        doc.text(`Nr: ${document.getElementById('c_nr').value}`, 140, 77);

        y = 105;
        doc.setFontSize(16); doc.setFont(undefined, 'bold'); doc.text("ANGEBOT", 20, y);
        y += 8; doc.setFontSize(12); doc.text(`Betreff: ${document.getElementById('c_obj').value}`, 20, y);

        let tableBody = [];
        const cats = getGroupedData();
        
        cats.forEach(catName => {
            const catItems = positions.filter(p => p.category === catName);
            tableBody.push([{ content: catName, colSpan: 5, styles: { fillColor: [241, 245, 249], fontStyle: 'bold', textColor: [37, 99, 235] } }]);
            catItems.forEach(p => {
                tableBody.push([
                    p.name,
                    p.qty,
                    p.std,
                    p.rate + " €",
                    (p.qty * p.std * p.rate * riskFactor).toFixed(2) + " €"
                ]);
            });
        });

        doc.autoTable({
            startY: y + 15,
            head: [['Leistung', 'Menge', 'Std/Einh', 'Preis', 'Gesamt']],
            body: tableBody,
            theme: 'plain',
            styles: { fontSize: 10, cellPadding: 3 },
            headStyles: { fillColor: [37, 99, 235], textColor: 255 },
            columnStyles: { 4: { halign: 'right' } }
        });

        let finalY = doc.lastAutoTable.finalY + 10;
        if (finalY > 250) { doc.addPage(); finalY = 20; }
        
        doc.setFontSize(10);
        doc.text(`Anfahrt: ${parseFloat(document.getElementById('v_travel').value).toFixed(2)} €`, 140, finalY);
        finalY += 6;
        doc.text(`Zwischensumme: ${document.getElementById('res-net').innerText.split(': ')[1]}`, 140, finalY);
        finalY += 6;
        doc.text(document.getElementById('res-vat').innerText, 140, finalY);
        finalY += 8;
        doc.setFontSize(12); doc.setFont(undefined, 'bold');
        doc.text(document.getElementById('res-total').innerText, 140, finalY);

        doc.save(`Angebot_${document.getElementById('c_nr').value}.pdf`);
    }

    function exportWord() {
        const { Document, Packer, Paragraph, TextRun, Table, TableRow, TableCell, WidthType } = docx;
        const riskFactor = parseFloat(document.getElementById('v_risk').value) || 1.0;
        const cats = getGroupedData();

        const tableRows = [
            new TableRow({
                children: [
                    new TableCell({ children: [new Paragraph({text: "Leistung", bold: true})], width: {size: 60, type: WidthType.PERCENTAGE} }),
                    new TableCell({ children: [new Paragraph({text: "Menge", bold: true})] }),
                    new TableCell({ children: [new Paragraph({text: "Gesamt (€)", bold: true})] }),
                ]
            })
        ];

        cats.forEach(catName => {
            const catItems = positions.filter(p => p.category === catName);
            tableRows.push(new TableRow({
                children: [
                    new TableCell({ children: [new Paragraph({text: catName, bold: true, color: "2563EB"})], columnSpan: 3, shading: { fill: "F1F5F9" } })
                ]
            }));
            catItems.forEach(p => {
                const sum = (p.qty * p.std * p.rate * riskFactor).toFixed(2);
                tableRows.push(new TableRow({
                    children: [
                        new TableCell({ children: [new Paragraph(p.name)] }),
                        new TableCell({ children: [new Paragraph(p.qty.toString())] }),
                        new TableCell({ children: [new Paragraph(sum)] }),
                    ]
                }));
            });
        });

        const doc = new Document({
            sections: [{
                children: [
                    new Paragraph({ children: [new TextRun({ text: "ANGEBOT", bold: true, size: 32, color: "2563EB" })], spacing: { after: 200 } }),
                    new Paragraph({ text: document.getElementById('s_comp').value, bold: true }),
                    new Paragraph({ text: "Betreff: " + document.getElementById('c_obj').value, spacing: { after: 200, before: 200 } }),
                    new Table({ rows: tableRows, width: { size: 100, type: WidthType.PERCENTAGE } }),
                    new Paragraph({ text: "\n" + document.getElementById('res-total').innerText, alignment: "right", bold: true })
                ]
            }]
        });

        Packer.toBlob(doc).then(blob => {
            saveAs(blob, `Angebot_${document.getElementById('c_nr').value}.docx`);
        });
    }
</script>
</body>
</html>
